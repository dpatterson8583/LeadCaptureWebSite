@using LeadGeneration.Models;
@{    
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@model IEnumerable<Customer>

<h2>Customer</h2>

<!-- TODO:  Update the "table" class to spiff it up-->
<table class="table">
    <tr>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>MI</th>
        <th>Last Name</th>
        <th>Phone #</th>
        <th>Email</th>
        <th>Date of Birth</th>
        <th>Retired?</th>
        <th>Employee Count</th>
        <th>Lead Reference</th>
        <th>Best Time to Call</th>
    </tr>

    @foreach (var customer in @Model)
    {
        <tr>
            <td>@customer.CustomerID</td>
            <td>@customer.FirstName</td>
            <td>@customer.MiddleInitial</td>
            <td>@customer.LastName</td>
            <td>@customer.PhoneNumber</td>
            <td>@customer.Email</td>
            <td>@customer.DOB</td>
            <td>@customer.Retired</td>
            <td>@customer.EmployeeCount</td>
            <td>@customer.LeadReference</td>
            <td>@customer.BestTimeToCall</td>
        </tr>
    }

</table>