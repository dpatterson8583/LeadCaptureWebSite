@using LeadGeneration.Models;

@model Customer

<h2>Update @Model.EmailAddress</h2><br />

@using (Html.BeginForm("UpdateCustomerToDatabase", "Customer", "Post"))
{
    <input asp-for="CustomerID" type="hidden" value="@Model.CustomerID" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />

    <label asp-for="MiddleInitial" class="control-label">Middle Initial</label>
    <input type="text" name="MiddleInitial" class="form-control" value="@Model.MiddleInitial" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="@Model.LastName" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" name="EmailAddress" class="form-control" value="@Model.EmailAddress" />

    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
    <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />

    <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
    <input type="text" name="DateOfBirth" class="form-control" value="@Model.DateOfBirth.Date" />

    <label asp-for="Retired" class="control-label">Retired?</label>
    <input type="text" name="Retired" class="form-control" value="@Model.Retired.ToString()" />

    <label asp-for="BestTimeToCall" class="control-label">Best Time to Call</label>
    <input type="text" name="BestTimeToCall" class="form-control" value="@Model.BestTimeToCall" />

    <label asp-for="LeadReference" class="control-label">Lead Reference</label>
    <input type="text" name="LeadReference" class="form-control" value="@Model.LeadReference" />

    <label asp-for="EmployeeCount" class="control-label">Employee Count</label>
    <input type="number" name="EmployeeCount" class="form-control" value="@Model.EmployeeCount" />

    <input type="submit" value="Update Customer" class="btn btn-primary" />
}