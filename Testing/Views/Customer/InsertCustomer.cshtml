@using LeadGeneration.Models;

@model Customer

<h2>Create a New Customer</h2>

@using (Html.BeginForm("InsertCustomerToDatabase", "Customer", "Post"))
{
    <input asp-for="CustomerID" type="hidden" value="" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="" />

    <label asp-for="MiddleInitial" class="control-label">Middle Initial</label>
    <input type="text" name="MiddleInitial" class="form-control" value="" />

    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="" />

    <label asp-for="PhoneNumber" class="control-label">Phone #</label>
    <input type="text" name="MiddleInitial" class="form-control" value="" />

    <label asp-for="EmailAddress" class="control-label">Email Address</label>
    <input type="text" name="EmailAddress" class="form-control" value="" />

    <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
    <input type="datetime" name="DateOfBirth" class="form-control" value="" />

    <label asp-for="Retired" class="control-label">Retired?</label>
    <input type="number" name="Retired" class="form-control" value="" />

    <label asp-for="EmployeeCount" class="control-label">Employee Count</label>
    <input type="number" name="EmployeeCount" class="form-control" value="" />

    <div class="form-group">
        <label for="">Best Time to Call</label>
        <select class="form-control" name="BestTimeToCall" value="">
               <option value="Morning">Morning</option>
               <option value="Afternoon">Afternoon</option>
               <option value="Evening">Evening</option>
        </select>
    </div>

    <div class="form-group">
        <label for="">Select a Lead Reference</label>
        <select class="form-control" name="RefID" value="">
            @foreach (var lref in Model.LeadReferences)
            {
                <option value="@lref.RefType">@lref.RefID @lref.RefType</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Customer" class="btn btn-primary" />
    <input type="submit" value="Cancel" class="btn btn-primary"  onclick="window.location.href = '/index.html'" />



}
